{
    "compilerOptions": {
        "module": "commonjs",
        "types": ["node", "jest"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "strictNullChecks":true,
        "noImplicitThis":true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": ["node_modules/@types", "src/imports/@types"],
    },
    "files": ["src/imports/@types/graphql.d.ts"],
    "include": [
        "./src/**/*",
        "./src/app.ts",
       // "tests" Comenting the tests because its causing build failure
       
    ],
    "exclude": [
        "./node_modules",
        "**/*.spec.ts",
    ]
  }